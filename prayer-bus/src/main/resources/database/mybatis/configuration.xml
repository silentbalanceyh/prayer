<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="defaultExecutorType" value="REUSE" />
    </settings>
    <typeAliases>
        <typeAlias type="com.prayer.model.vertx.PEScript"
            alias="Script" />
        <typeAlias type="com.prayer.model.vertx.PEAddress"
            alias="Address" />
    </typeAliases>
    <environments default="H2Environment">
        <environment id="H2Environment">
            <transactionManager type="JDBC" />
            <dataSource type="com.prayer.plugin.ibatis.PEDataSourceFactory" />
        </environment>
    </environments>
    <mappers>
        <mapper resource="database/mybatis/mapper/PEScript.xml" />
        <mapper resource="database/mybatis/mapper/PEAddress.xml" />
    </mappers>
</configuration>