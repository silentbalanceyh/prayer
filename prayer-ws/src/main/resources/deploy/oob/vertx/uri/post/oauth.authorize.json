[
	{
		"name":"username",
		"type":"StringType",
		"order":1,
		"componentType":"VALIDATOR",
		"componentClass":"com.prayer.uca.validator.RegexValidator",
		"config":{
			"regex":"^[A-Za-z0-9@._-]{6,16}$"
		},
		"errorMessage":"用户名中只可以包含字母、数字、下划线(_)、@、点(.)、中划线(-)，且长度在6 ~ 16字符。"
	},
	{
		"name":"username",
		"type":"StringType",
		"order":2,
		"componentType":"VALIDATOR",
		"componentClass":"com.prayer.uca.validator.UniqueValidator",
		"config":{
			"table":"SEC_ACCOUNT",
			"column":"S_USERNAME"
		},
		"errorMessage":"该用户名已经存在，不可用，请输入可用用户名。"
	},
	{
		"name":"password",
		"type":"StringType",
		"order":3,
		"componentType":"VALIDATOR",
		"componentClass":"com.prayer.uca.validator.LengthValidator",
		"config":{
			"minLength":8
		},
		"errorMessage":"密码的最小长度是8位，请输入8位以上的密码。"
	},
	{
		"name":"password",
		"type":"StringType",
		"order":1,
		"componentType":"CONVERTOR",
		"componentClass":"com.prayer.uca.convertor.EncryptionConvertor",
		"config":{
			"algorithm":"MD5"
		},
		"errorMessage":"密码加密过程出现问题，请联系管理员。"
	}
]