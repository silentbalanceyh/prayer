extends layout
block content_main
	.container#{G_PAGE_WIDTH}
		form#fLogin.form-horizontal
		
			.form-group
				label.col-sm-2.control-label(for="username") Account ID
				.col-sm-3
					input#username.form-control(type="text",name="username")
				
			.form-group
				label.col-sm-2.control-label(for="password") Password
				.col-sm-3
					input#password.form-control(type="password",name="password")
				
			.form-group
				.col-sm-offset-2.col-sm-3
					button.btn.btn-success(type="button",onclick="") Login
					&nbsp;&nbsp;
					button.btn.btn-default(type="reset") Reset
				
			
	.container#{G_PAGE_WIDTH}
		.form-group
			#divError.alert.alert-danger.invisible		
	