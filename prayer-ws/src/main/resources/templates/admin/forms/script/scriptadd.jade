form#fScriptAdd.form-horizontal(action="#")
    input#fScriptAddDATA(type="hidden",value="in_name,in_namespace,in_content")
    .alert.alert-error.hide
        button.close(data-dismiss="alert") &times;
        strong Error!
        span &nbsp;&nbsp;There are some errors, please check below.
    .alert.alert-success.hide
        button.close(data-dismiss="alert") &times;
        strong Success!
        span &nbsp;&nbsp;Your form validation is successful!
    .control-group
        .control-label.span2(for="in_name")
            span Script Name
            span.required *
        .controls.span4
            input#in_name.input.input-xlarge(type="text",name="in_name")
        .control-label.span2(for="in_namespace")
            span Namespace
            span.required *
        .controls.span4
            input#in_namespace.input.input-xlarge(type="text",name="in_namespace")
    .control-group
        .control-label.span2(for="in_content")
            span Script Content
            span.required *
        .consoles.span10
            textarea#in_content.cusEditor
            input#content.input.input-xlarge(type="hidden",name="content")
    .control-group
        .control-label.span2
        .controls
            .table-toolbar
                .btn-group
                    a.btn.btn-primary(onclick="addScript();return false;")
                        i.icon-plus.icon-white
                        span &nbsp;&nbsp;Add New