form#fUserAdd.form-horizontal(action="#")
    input#fUserAddDATA(type="hidden",value="in_username,in_password,in_cfmpwd,in_email,in_mobile")
    .alert.alert-error.hide
        button.close(data-dismiss="alert") &times;
        strong Error!
        span &nbsp;&nbsp;There are some errors, please check below.
    .alert.alert-success.hide
        button.close(data-dismiss="alert") &times;
        strong Success!
        span &nbsp;&nbsp;Your form validation is successful!
    .control-group
        .control-label(for="in_username")
            span Account ID
            span.required *
        .controls
            input#in_username.input-xlarge(type="text",name="in_username")
    .control-group
        .control-label(for="in_password")
            span Password
            span.required *
        .controls
            input#in_password.input-xlarge(type="password",name="in_password")
    .control-group
        .control-label(for="in_cfmpwd")
            span Password Confirm
            span.required *
        .controls
            input#in_cfmpwd.input-xlarge(type="password",name="in_cfmpwd")
    .control-group
        .control-label(for="in_email")
            span Email Address
            span.required *
        .controls
            input#in_email.input-xlarge(type="text",name="in_email")
    .control-group
        .control-label(for="in_mobile")
            span Mobile
            span.required *
        .controls
            input#in_mobile.input-xlarge(type="text",name="in_mobile")
    .form-actions
        a.btn.btn-primary(onclick="addUser();return false;")
            i.icon-plus.icon-white
            span &nbsp;&nbsp;Add New
        span &nbsp;&nbsp;
        a.btn.btn-danger(onclick="closeTabForm();return false;")
            i.icon-remove.icon-white
            span &nbsp;&nbsp;Cancel        